    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_newMeet"
            android:text="@string/newMeet"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spn_Meets"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/btn_newMeet"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />



        <Button
            android:id="@+id/btn_Date"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/btn_newMeet"
            android:text="Date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />

        <FrameLayout
            android:id="@+id/scoreEntryList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/spn_Meets"
            android:layout_margin="15dp">

          </FrameLayout>
</RelativeLayout>


